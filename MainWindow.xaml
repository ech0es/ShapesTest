<Window x:Class="ShapeTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShapeTest"
        xmlns:viewModels="clr-namespace:ShapeTest.ViewModels"
        xmlns:views="clr-namespace:ShapeTest.Views"
        xmlns:enums="clr-namespace:ShapeTest.Enums"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <viewModels:MainViewModel x:Key="MainViewModel"/>
    </Window.Resources>

    <Grid DataContext="{StaticResource MainViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0"
                   Margin="0 0 0 4">
            <WrapPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin"
                            Value="1"/>
                </Style>
            </WrapPanel.Resources>

            <Button Command="{Binding AddShapeCommand}" CommandParameter="{x:Static enums:Shapes.Square}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Height="92"
                           Width="92"
                           HorizontalAlignment="Center"
                           Margin="2"
                           Source="../Images/square.png"/>
                    <TextBlock Grid.Row="1"
                               HorizontalAlignment="Center"
                               Text="Square"/>
                </Grid>
            </Button>

        </WrapPanel>

        <views:ShapeList Grid.Row="1"
                         Shapes="{Binding Shapes}"/>
    </Grid>
</Window>
