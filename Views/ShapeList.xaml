                                    Style="{StaticResource RemoveButton}" />

                            <TextBlock Grid.Column="1"
                                       Text="Square"
                                       HorizontalAlignment="Left"
                                       Margin="2" />

                            <StackPanel Orientation="Horizontal"
                                        Grid.Column="2"
                                        HorizontalAlignment="Left"
                                        Margin="2">
                                <TextBlock Width="40"
                                           Text="Length:" />
                                <TextBox Width="40"
                                         Margin="4 0"
                                         TextAlignment="Right"
