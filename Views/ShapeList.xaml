                <Border Grid.Column="0"
                        BorderBrush="Black"
                        BorderThickness="1 1 .5 1" />

                <Border Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness=".5 1">
                    <TextBlock Text="Type"
                               HorizontalAlignment="Center"
                               Margin="2" />
                </Border>

                <Border Grid.Column="2"
                        BorderBrush="Black"
                        BorderThickness=".5 1">
                    <TextBlock Text="Dimensions"
                               HorizontalAlignment="Center"
                               Margin="2" />
                </Border>

                <Border Grid.Column="3"
                        BorderBrush="Black"
                        BorderThickness=".5 1">
                    <TextBlock Text="Area"
                               HorizontalAlignment="Center"
                               Margin="2" />
                </Border>

                <Border Grid.Column="4"
                        BorderBrush="Black"
                        BorderThickness=".5 1 1 1">
                    <TextBlock Text="Volume"
                               HorizontalAlignment="Center"
                               Margin="2" />
                </Border>
            </Grid>

